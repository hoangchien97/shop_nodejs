    "@types/express": "^4.17.0",
    "@types/express-serve-static-core": "^4.16.7",
    "@types/sequelize": "^4.28.3",
    "async": "^3.1.0",
    "concurrently": "^4.1.1",
    "config": "^3.2.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.10.0",
    "sequelize-typescript": "^0.6.11"
  },
  "devDependencies": {
    "@types/async": "^3.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/node": "^12.6.2",
    "@types/shelljs": "^0.8.5",
    "fs-extra": "^8.1.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
